<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="280dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/cardview_dark_background"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/mealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="@string/mealName"
                android:layout_below="@+id/imageMeal" />

            <TextView
                android:id="@+id/mealDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mealDate"
                android:layout_below="@+id/mealName" />

            <TextView
                android:id="@+id/mealCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mealCity"
                android:layout_below="@+id/mealDate" />

            <TextView
                android:id="@+id/mealPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mealPrice"
                android:layout_below="@+id/mealCity" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>